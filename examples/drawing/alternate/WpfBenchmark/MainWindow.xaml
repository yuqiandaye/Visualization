<Window x:Class="WpfBenchmark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBenchmark"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="WPF Primitive Drawing Benchmark" Height="490" Width="634">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Content="10" Padding="5 2 5 2" Margin="5 5 0 0" Click="Button10_Click"/>
                <Button Content="1k" Padding="5 2 5 2" Margin="5 5 0 0" Click="Button1k_Click"/>
                <Button Content="10k" Padding="5 2 5 2" Margin="5 5 0 0" Click="Button10k_Click"/>
                <Button Content="100k" Padding="5 2 5 2" Margin="5 5 0 0" Click="Button100k_Click"/>
            </StackPanel>
            <Canvas x:Name="myCanvas" Width="600" Height="400" Background="DarkMagenta" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
